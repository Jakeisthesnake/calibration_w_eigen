{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",        
                "-fdiagnostics-color=always",
                "-g",
                "-I/home/jake/calibration_w_eigen/third_party",
                "-I/home/jake/calibration_w_eigen/third_party/Pangolin/install/include",
                "-I/home/jake/calibration_w_eigen/third_party/ceres-bin/install/include",
                "-I/home/jake/calibration_w_eigen/third_party/eigen-3.4.0",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                

                // âœ… Linker paths
                "-L/home/jake/calibration_w_eigen/third_party/Pangolin/install/lib",
                "-L/home/jake/calibration_w_eigen/third_party/ceres-bin/install/lib",

                // âœ… Pangolin libraries
                "-lpango_core",
                "-lpango_display",
                "-lpango_geometry",
                "-lpango_image",
                "-lpango_opengl",
                "-lpango_packetstream",
                "-lpango_plot",
                "-lpango_scene",
                "-lpango_tools",
                "-lpango_video",
                "-lpango_windowing",
                "-lpango_vars",

                // âœ… OpenGL libraries
                "-lGL",
                "-lGLU",
                "-lglut",
                "-lGLEW",

                // âœ… Ceres and dependencies
                "-lceres",
                // Add these ðŸ‘‡
                "-lcholmod",
                "-lccolamd",
                "-lcolamd",
                "-lamd",
                "-lcamd",
                "-lsuitesparseconfig",
                "-lblas",
                "-llapack",
                "-lglog",
                "-lgflags"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
